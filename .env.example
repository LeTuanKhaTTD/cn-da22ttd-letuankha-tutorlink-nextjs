# ============================================
# TUTORLINK - ENVIRONMENT VARIABLES TEMPLATE
# ============================================

# Application
VITE_APP_NAME=TutorLink
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Hệ thống kết nối gia sư TVU"

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_SECRET=your-secret-key-here
VITE_JWT_EXPIRES_IN=7d

# File Upload (Cloudinary)
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name
VITE_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
VITE_CLOUDINARY_API_KEY=your-api-key

# Chat (Socket.io)
VITE_SOCKET_URL=http://localhost:5000

# Email Service
VITE_EMAIL_SERVICE_URL=http://localhost:5000/api/email

# Google Maps (Optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=your-ga-id

# Feature Flags
VITE_ENABLE_CHAT=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PAYMENT=false

# Development
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug
